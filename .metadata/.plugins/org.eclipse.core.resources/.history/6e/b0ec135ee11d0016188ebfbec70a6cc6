package week17;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.Collections;
import java.util.Comparator;
import java.util.List;
import java.util.function.Consumer;

public class Pract1 {

	public static void main(String[] args) {
		List<String> l =Arrays.asList( "four","one", "two", "eight");
	
		
		l.forEach(new Consumer<String>(){		
			public void accept(String s){
				System.out.print(s + " ");
			}			
		});

		System.out.println();
		l.forEach(s-> System.out.print(s + " "));
		
		System.out.println();
		l.forEach(System.out::println);
			
		//Comparator
		Collections.sort(l,new Comparator<String>(){
			@Override
			public int compare(String a, String b) {
				return Integer.compare(a.length(), b.length());
			}
	    	
	    });
	    l.forEach(System.out::println);
	    
		//with lambdas
		System.out.println();
	    Collections.sort(l, (a,b) -> Integer.compare(a.length(), b.length()));
	    l.forEach(System.out::println);
	    
	    
	    System.out.println("-------------");
	    List<String> list=new ArrayList<String>(3);
	    for (String s : l) {
			if (s.indexOf('o')>0) {
				list.add(s);
			}		
		}
	    System.out.println(list);
	    Collections.sort(list, (a,b) -> Integer.compare(a.length(), b.length()));
	    String z=list.get(0);
	    for (int i = 1; i < list.size(); i++) {
			z+=";"+list.get(i);
		}
	    System.out.println(z);
	    
	}
	
	
}

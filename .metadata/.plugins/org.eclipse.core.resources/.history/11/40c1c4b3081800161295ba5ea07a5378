package main;

import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.List;

import managers.WarehouseManager;
import models.Warehouse;
import processing.RequestProcessor;


public class Run {

	public static void main(String[] args) {
		WarehouseManager w=new WarehouseManager();
		String file="testInputSupply.txt";
		Warehouse warehouse=readInputFile(file);
		
		
		w.updateWarehouseData(warehouse);
		w.getWarehouseById("w1");
		
	}

	public static Warehouse readInputFile(String inputFile){
		Warehouse w=null;
		try(BufferedReader reader=new BufferedReader(
				new FileReader(inputFile))){
			String line=null;
			while((line=reader.readLine())!= null){
				w=readRequest(line);
			}
					
		} catch (FileNotFoundException fnfe) {
			System.err.println(fnfe);
		} catch (IOException ioe) {
			System.err.println(ioe);
		}
		return w;
	}
	
	public static Warehouse readRequest(String request){
		WarehouseManager wm=new WarehouseManager();
		Warehouse w=wm.getWarehouseById("w1");
		String[] reqParts=request.split(" ");
		//get word supply or delivery
		String type=reqParts[0];
		//process request
		RequestProcessor rp=new RequestProcessor();
		rp.processRequest(type, request);
		return w;
	}
	
}

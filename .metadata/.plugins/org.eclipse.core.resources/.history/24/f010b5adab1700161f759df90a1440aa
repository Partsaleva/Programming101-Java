package week16;

import java.util.ArrayList;
import java.util.List;

public class Run {

	public static void main(String[] args) {
		String p1="2x^4 + 3x^2 - 10x + 3";
		String p2="8x^3 + 6x - 10";
		parse(p1);
		String polynomial= "-2x^2+3x^1+6";
	    String[] parts = polynomial.split("x\\^\\d+\\+?");
	    for (String part : parts) {
	        System.out.println(part);
	    }

	}

	public static void parse(String p) {
		List<Member> members = new ArrayList<Member>();
		String polin=p.replaceAll("\\s", "");
		//polin=polin.replaceAll("-", "+-");
		System.out.println(polin);
		String[] parts = p.split("x\\^\\d+\\+?");
		for (String mem : parts) {
			System.out.println(mem);	
				
		}
	}
}

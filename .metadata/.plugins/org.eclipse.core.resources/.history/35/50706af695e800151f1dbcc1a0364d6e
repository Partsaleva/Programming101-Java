package friday;

import java.util.Scanner;

class sumInts implements Runnable{

	private int a;
	private int b;
	
	public sumInts() {
		this.a=a;
		this.b=b;
	}
	@Override
	public void run() {
		Scanner c=new Scanner(System.in);
		int a,b;
		a=c.nextInt();
		b=c.nextInt();
		c.close();
		add();
	}
	private int add(){
		return a+b;
	}
	
}
public class ThreadSumsInts {

	public static void main(String[] args) {
		Thread sum=new Thread(new sumInts(3,4));
		sum.start();
		
	}

}

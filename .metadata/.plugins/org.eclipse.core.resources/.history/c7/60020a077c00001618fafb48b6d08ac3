package fileDownloader;


import java.io.File;
import java.io.IOException;
import java.net.URL;
import java.nio.file.Files;
import java.nio.file.Path;
import java.nio.file.StandardCopyOption;

public class DownloadFileWithJava {

	public static void main(String[] args) throws IOException {
		String dest=("/home/partsaleva/Projects/java101/week11/1.Monday/fileDownloader");
		URL url=new URL("https://scontent.xx.fbcdn.net/hphotos-xtp1/v/t1.0-9/13010655_10207606637062638_7841104408178374733_n.jpg?oh=99f9bb8684c31030863654bf5eca271e&oe=577DF732");
		downloadFile(url, dest);

	}

	public static Path downloadFile(URL url, String targetFolder) throws IOException{		
		String name=url.getFile();
		Path destFolder=new File(targetFolder+name).toPath();
		
		Files.copy(url.openStream(), destFolder, StandardCopyOption.REPLACE_EXISTING);
		
		return destFolder;	
	}
}

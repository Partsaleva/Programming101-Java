
//Create a BST with a Node as nested class.
	//You should be able to add, search and remove an element. 
	//You should also calculate the depth and the height of a given element.
	//Bonus: Try to calculate the depth and height in O(1).
public class BST {

	public static void main(String[] args) {
		BST bst=new BST();
		bst.add(3);bst.add(4);bst.add(1);
		System.out.println(bst.toString());
	}
	
	class Node{
		int value;
		int height, depth;
		Node left;
		Node right;
		Node(int value){
			this.value=value;
			left=null; right=null;	
			height=0; depth=0;
		}
	}
	
	Node root;
	BST(){
		root=null;
	}
	
	public void add(int value) {
	    insertNode(root, new Node(value));
	}

	// private recursive call

	private void insertNode(Node currentParent, Node newNode) {

	    if (currentParent == null) {
	    	currentParent=newNode;
	    } else if (newNode.value > currentParent.value) {
	        insertNode(currentParent.right, newNode);
	    } else if (newNode.value <= currentParent.value) {
	        insertNode(currentParent.left, newNode);
	    }
	}
	
	boolean search(){
		return false;
		}
	
	
	void remove(){}
	
	
	
	
	private void insert(Node root, int value){
		if (root == null){
			root = new Node(value);
		}
		else if (value <= root.value){
			insert(root.left, value);
		}
		else{
			insert(root.right, value);
		}
		
	}

	@Override
	public String toString() {
		return "BST [root=" + root + ", getClass()=" + getClass() + ", hashCode()=" + hashCode() + ", toString()="
				+ super.toString() + "]";
	}
	
}
